{
  "name": "shiv-accounts-backend",
  "version": "1.0.0",
  "description": "Backend API for Shiv Accounts Cloud - Accounting System",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node",
    "start": "bun src/index.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "bun run src/scripts/seed.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "docs:generate": "swagger-jsdoc -d swaggerDef.js src/routes/*.ts -o docs/swagger.json"
  },
  "dependencies": {
    "@prisma/client": "6.16.1",
    "axios": "^1.6.2",
    "bcryptjs": "3.0.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "5.0.1",
    "express-async-errors": "latest",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "8.0.1",
    "express-validator": "latest",
    "helmet": "8.0.0",
    "joi": "18.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "latest",
    "multer": "2.0.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/bun": "latest",
    "@types/compression": "1.8.1",
    "@types/cors": "^2.8.17",
    "@types/express": "5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "2.0.0",
    "@types/node": "^24.5.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "8.44.0",
    "@typescript-eslint/parser": "8.44.0",
    "bun-types": "latest",
    "eslint": "9.36.0",
    "prisma": "6.16.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "accounting",
    "erp",
    "invoicing",
    "inventory",
    "typescript",
    "express",
    "prisma"
  ],
  "author": "Shiv Accounts Cloud",
  "license": "MIT"
}
